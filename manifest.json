{
  "manifest_version": 3,
  "name": "PokeRogueData",
  "version": "1.0.0",
  "description": "Displays enemy Pok√©mon data: base stats, possible abilities, and possible movesets.",

  "permissions": [
    "activeTab"
  ],

  "host_permissions": [
    "*://*.pokerogue.net/*"
  ],

  "content_scripts": [
    {
      "matches": ["*://*.pokerogue.net/*"],
      "js": ["pokedex.js", "content.js"],
      "css": ["styles.css"],
      "run_at": "document_end"
    }
  ],

  "web_accessible_resources": [
    {
      "resources": [
        "move_data.json",
        "pagehook.js",
        "ability_data.json"
      ],
      "matches": ["*://*.pokerogue.net/*"]
    }
  ]
}
